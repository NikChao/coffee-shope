{
	"name": "coffee-shope",
	"scripts": {
		"create-component": "barista create component",
		"create:component": "yarn create-component",
		"create-util": "barista create util",
		"create:util": "yarn create-util",
		"bootstrap": "lerna bootstrap",
		"build-all": "lerna run --no-bail --stream 'build'",
		"publish-all": "lerna publish --ignore coffee-shope --message=\"chore: Publish packages\"",
		"publish:all": "yarn publish-all",
		"storybook": "start-storybook -p 9001 -c .storybook",
		"reinstall": "rm -rf node_modules/ && rm -rf **/node_modules/ && yarn && yarn bootstrap",
		"start": "yarn storybook",
		"stories": "yarn start",
		"format": "eslint '**/*.{ts,tsx}' --fix"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/plugin-proposal-decorators": "^7.3.0",
		"@babel/plugin-proposal-json-strings": "^7.2.0",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
		"@babel/plugin-proposal-object-rest-spread": "^7.3.2",
		"@babel/plugin-proposal-optional-chaining": "^7.7.5",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/plugin-syntax-import-meta": "^7.2.0",
		"@babel/plugin-transform-runtime": "^7.2.0",
		"@babel/preset-env": "^7.3.1",
		"@babel/preset-react": "^7.0.0",
		"@babel/preset-typescript": "^7.7.7",
		"@coffee-shope/barista": "^1.0.0",
		"babel-core": "^6.26.3",
		"babel-loader": "^8.0.5",
		"babel-preset-env": "^1.7.0",
		"lerna": "^2.4.0",
		"react-svg-loader": "^2.1.0",
		"sass-loader": "^7.1.0",
		"webpack": "^4.29.3",
		"webpack-cli": "^3.2.3"
	},
	"private": true,
	"workspaces": [
		"components/*",
		"utils/*"
	],
	"dependencies": {
		"@babel/plugin-proposal-class-properties": "^7.3.3",
		"@storybook/react": "^5.1.10",
		"@storybook/theming": "^5.1.10",
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"@typescript-eslint/parser": "^1.9.0",
		"core-js": "^3.1.4",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.2.0",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.13.0",
		"prettier": "^1.17.1",
		"react": "^16.8.1",
		"react-dom": "^16.8.1",
		"typescript": "^3.4.5"
	},
	"license": "MIT",
	"version": "1.0.0"
}
