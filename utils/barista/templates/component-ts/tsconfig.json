{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "typings/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "__tests__",
    "stories",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "lib"
  ],
  "types": [
    "typePatches"
  ]
}
